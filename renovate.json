{
  "extends": ["config:base"],
  "automerge": true,
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "schedule": ["every weekend"],
  "masterIssue": true,
  "labels": ["type: dependencies", "renovate"],
  "ignoreDeps": ["cy-spok", "stop-only"],
  "dependencyDashboardApproval": false,
  "packageRules": [
    {
      "groupName": "All Minor and Patch Updates",
      "matchUpdateTypes": ["minor", "patch"]
    }
  ]
}
